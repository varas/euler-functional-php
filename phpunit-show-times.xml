<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="true"
         stopOnFailure="false"
         syntaxCheck="false"
    >
    <testsuites>
        <testsuite name="Euler Test Suite">
            <directory>./test/</directory>
        </testsuite>
    </testsuites>
    <listeners>
        <listener class="PHPUnitTimeListener" file="test/PHPUnitTimeListener.php">
            <arguments>
                <boolean name="showExecutionTime">true</boolean>
            </arguments>
        </listener>
    </listeners>
</phpunit>
